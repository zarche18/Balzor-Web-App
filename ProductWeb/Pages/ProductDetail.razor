@page "/ProductDetails/{Id:int}"
@inherits ProductDetailBase

@if (Product == null)
{
    <DisplaySpinner/>
}
else
{
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Product.Image">       
        </div>
        <div class="col-md-6">
            <h3>@Product.Name</h3>
            <p class="mb-4">@Product.Description</p>
            <p class="mb-4">
                <b>
                    @Product.Price.ToString("C")&nbsp;
                </b>
            </p>
        </div>

    </div>
}
